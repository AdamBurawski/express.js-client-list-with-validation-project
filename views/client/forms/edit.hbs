<h2>Edytujesz {{client.name}} ( <small>{{client.id}} )</small></h2>

<form method="POST" action="/client/{{client.id}}?_method=PUT">
  <label>
    <p>
      <input
        type="email"
        placeholder="Twój adres email"
        name="mail"
        value="{{client.mail}}"
      />
    </p>
  </label>

  <label>
    <p>
      <input
        type="text"
        placeholder="Twoje imię"
        name="name"
        value="{{client.name}}"
      />
    </p>
  </label>

  <label>
    <p>Data następnego kontaktu</p>
    <p>
      <input
        type="date"
        name="nextContactAt"
        value="{{client.nextContactAt}}"
      />
    </p>
  </label>

  <label>
    <p>Notatki:</p>
    <p>
      <textarea name="notes">{{client.notes}}</textarea>
    </p>
  </label>

  <p>
    <button type="submit">Zapisz</button>
  </p>

</form>